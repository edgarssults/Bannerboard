@inherits WidgetBase

<div class="card">
   <div class="card-header">
        <div class="d-flex">
            <div class="align-self-center">Party</div>
            @if (_partyModel != null)
            {
                <div class="dropdown ml-auto">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="filterMenu" data-toggle="dropdown" data-display="static" aria-expanded="false" title="Filters">
                        <i class="fa fa-filter"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="filterMenu">
                        <form>
                            <div class="form-check dropdown-item">
                                <input class="d-none" type="checkbox" id="party-widget-units" checked="@_showUnits" @onchange="async e => await ShowUnitsChanged(!_showUnits)">
                                <label class="form-check-label d-block" for="party-widget-units">
                                    <i class="form-check-input fa @(_showUnits ? "fa-check-square": "fa-square")"></i>
                                    <span> Units</span>
                                </label>
                            </div>
                            <div class="form-check dropdown-item">
                                <input class="d-none" type="checkbox" id="party-widget-food" checked="@_showFood" @onchange="async e => await ShowFoodChanged(!_showFood)">
                                <label class="form-check-label d-block" for="party-widget-food">
                                    <i class="form-check-input fa @(_showFood ? "fa-check-square": "fa-square")"></i>
                                    <span> Food</span>
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="card-body">
        @if (_partyModel != null)
        {
            if (_showUnits)
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Units</th>
                            <th>@(_partyModel.Members.TotalHeroes + _partyModel.Members.TotalRegulars) / @_partyModel.Members.MaxCount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in _partyModel.Members.Items)
                        {
                            <tr>
                                <td><img src="img/@(GetMemberIcon(member)).png" class="img-war" /> @member.Description</td>
                                <td>@(member.WoundedCount > 0 ? $"{member.Count} ({member.WoundedCount}w)" : member.Count)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            if (_showFood)
            {
                <table class="table table-sm @(_showUnits ? "mt-4" : "")">
                    <thead>
                        <tr>
                            <th>Food</th>
                            <th>@_partyModel.Food.Items.Sum(x => x.Count)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var food in _partyModel.Food.Items)
                        {
                            <tr>
                                <td>@food.Name</td>
                                <td>@food.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
        else
        {
            <span>No data or incompatible mod version.</span>
        }
    </div>
</div>
